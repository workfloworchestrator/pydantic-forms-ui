{
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev --filter=example",
        "lint": "turbo lint",
        "tsc": "turbo run tsc",
        "clean": "turbo clean && rm -rf node_modules",
        "test": "turbo test",
        "prettier": "prettier -c \"{**/*,*}.{ts,tsx,json,js,md}\"",
        "prettier-fix": "prettier --write \"{**/*,*}.{ts,tsx,json,js,md}\"",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "release": "turbo build --filter=pydantic-forms && changeset publish"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "turbo": "^2.3.3"
    },
    "engines": {
        "node": ">=18"
    },
    "name": "with-changesets",
    "packageManager": "npm@10.9.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}
