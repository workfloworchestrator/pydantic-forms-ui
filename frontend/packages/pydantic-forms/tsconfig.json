{
    "extends": "@orchestrator-ui/tsconfig/base.json",
    "compilerOptions": {
        "strictNullChecks": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "module": "esnext"
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": [
        "node_modules",
        "**/*.stories.ts",
        "**/*.stories.js",
        "**/*.stories.jsx",
        "**/*.stories.tsx"
    ]
}
