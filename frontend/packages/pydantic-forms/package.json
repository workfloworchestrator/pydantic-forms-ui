{
    "name": "pydantic-forms",
    "version": "0.9.5",
    "description": "Library that turns JSONSchema into frontend forms",
    "author": {
        "name": "Workflow Orchestrator Programme",
        "email": "workfloworchestrator.board@commonsconservancy.org",
        "url": "https://www.workfloworchestrator.org"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workfloworchestrator/pydantic-forms-ui.git"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "homepage": "https://www.workfloworchestrator.org",
    "bugs": "https://github.com/workfloworchestrator/pydantic-forms-ui/issues",
    "keywords": [
        "orchestrator",
        "workflow",
        "workflow orchestrator",
        "pydanticforms",
        "forms",
        "jsonschema"
    ],
    "browser": "./dist/index.js",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "sideEffects": false,
    "license": "Apache-2.0",
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
        "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
        "lint": "eslint \"src/**/*.ts*\"",
        "tsc": "tsc --noEmit",
        "test": "jest --passWithNoTests",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
    },
    "devDependencies": {
        "@orchestrator-ui/eslint-config-custom": "^1.4.1",
        "@orchestrator-ui/jest-config": "^1.5.1",
        "@orchestrator-ui/tsconfig": "^1.2.1",
        "@types/jest": "^29.5.14",
        "@types/react": "^18.2.61",
        "@types/react-dom": "^18.2.19",
        "eslint": "^8.57.0",
        "ts-jest": "^29.3.2",
        "tsup": "^8.0.2",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "@apidevtools/json-schema-ref-parser": "^14.0.3",
        "@emotion/react": "^11.14.0",
        "@hookform/resolvers": "^5.1.1",
        "dayjs": "^1.11.13",
        "i18next": "^24.1.2",
        "lodash": "^4.17.21",
        "next-intl": "^3.26.5",
        "react-hook-form": "^7.54.1",
        "swr": "^2.3.0",
        "zod": "^3.25.1"
    },
    "peerDependencies": {
        "next": "^14.0.0 || ^15.0.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    }
}
