{
    "private": true,
    "scripts": {
        "dev": "turbo dev",
        "test": "turbo test",
        "tsc": "turbo run tsc",
        "lint": "turbo lint",
        "prettier": "prettier -c \"{**/*,*}.{ts,tsx,json,js,md}\"",
        "prettier-fix": "prettier --write \"{**/*,*}.{ts,tsx,json,js,md}\"",
        "build": "turbo build",
        "clean": "turbo clean && rm -rf node_modules",
        "changeset": "changeset",
        "packages:publish": "turbo run build lint test && changeset publish",
        "postinstall": "turbo run build --filter=./packages/*"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.6",
        "@types/lodash": "^4.17.16",
        "turbo": "^2.3.3"
    },
    "engines": {
        "node": ">=18"
    },
    "name": "with-changesets",
    "packageManager": "npm@10.9.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "dependencies": {
        "lodash.merge": "^4.6.2",
        "typescript": "^5.8.2"
    }
}
